
<form name="editForm" role="form" novalidate ng-submit="save()" show-validation>

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"
                ng-click="clear()">&times;</button>
        <h4 class="modal-title" id="myCompagneLabel" translate="creamApp.compagne.home.createOrEditLabel">Create or edit a Compagne</h4>
    </div>
    <div class="modal-body">
        <jh-alert-error></jh-alert-error>
        <div class="form-group">
            <label for="id" translate="global.field.id">ID</label>
            <input type="text" class="form-control" id="id" name="id"
                    ng-model="compagne.id" readonly />
        </div>
        <div class="form-group">
            <label class="control-label" translate="creamApp.compagne.libelle" for="field_libelle">Libelle</label>
            <input type="text" class="form-control" name="libelle" id="field_libelle"
                    ng-model="compagne.libelle"
                    required />
            <div ng-show="editForm.libelle.$invalid">
                <p class="help-block"
                    ng-show="editForm.libelle.$error.required" translate="entity.validation.required">
                    This field is required.
                </p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label" translate="creamApp.compagne.dateDebut" for="field_dateDebut">DateDebut</label>
            <input id="field_dateDebut" type="text" class="form-control" uib-datepicker-popup="{{dateformat}}" ng-model="compagne.dateDebut" is-open="datePickerForDateDebut.status.opened"
            />
            <span class="input-group-btn">
                <button type="button" class="btn btn-default" ng-click="datePickerForDateDebutOpen($event)"><i class="glyphicon glyphicon-calendar"></i></button>
            </span>
        </div>
        <div class="form-group">
            <label class="control-label" translate="creamApp.compagne.dateFin" for="field_dateFin">DateFin</label>
            <input id="field_dateFin" type="text" class="form-control" uib-datepicker-popup="{{dateformat}}" ng-model="compagne.dateFin" is-open="datePickerForDateFin.status.opened"
            />
            <span class="input-group-btn">
                <button type="button" class="btn btn-default" ng-click="datePickerForDateFinOpen($event)"><i class="glyphicon glyphicon-calendar"></i></button>
            </span>
        </div>

        <div class="form-group">
            <label translate="creamApp.compagne.statutCompagne" for="field_statutCompagne">statutCompagne</label>
            <select class="form-control" id="field_statutCompagne" name="statutCompagne" ng-model="compagne.statutCompagneId" ng-options="refStatutCompagne.id as refStatutCompagne.libelle for refStatutCompagne in refstatutcompagnes">
                <option value=""></option>
            </select>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="clear()">
            <span class="glyphicon glyphicon-ban-circle"></span>&nbsp;<span translate="entity.action.cancel">Cancel</span>
        </button>
        <button type="submit" ng-disabled="editForm.$invalid || isSaving" class="btn btn-primary">
            <span class="glyphicon glyphicon-save"></span>&nbsp;<span translate="entity.action.save">Save</span>
        </button>
    </div>
</form>
